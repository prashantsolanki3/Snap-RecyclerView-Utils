<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.prashantsolanki3.snaprecyclerviewutils">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="io.prashantslolanki3.snaprecyclerview.sample.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.prashantslolanki3.snaprecyclerview.sample.ui.MultiLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.prashantslolanki3.snaprecyclerview.sample.ui.SelectableRecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.prashantslolanki3.snaprecyclerview.sample.ui.pickers.SnapImagePickerActivity"
            android:label="Snap Image Picker"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.prashantslolanki3.snaprecyclerview.sample.ui.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.prashantslolanki3.snaprecyclerview.sample.ui.pickers.ImageFullScreenActivity"></activity>
    </application>

</manifest>
